<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- CSS only -->
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
            <nav class="navbar navbar-expand-lg navbar-light bg-light " aria-label="Eighth navbar example">
                <div class="container">
                    <a class="navbar-brand" href="{{path('app_home_index')}}">Santrest</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarsExample07">
                        <ul class="navbar-nav ml-auto">
                            {% if app.getUser %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{path('app_sants_create')}}">New sant</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{path('app_logout')}}">Log out</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{path('app_login')}}">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{path('app_register')}}">Register</a>
                                </li>
                            {% endif %}
                            
                        </ul>
                    </div>
                </div>
            </nav>
            {{ include ("/partials/flash.html.twig")}}
         <main role="main" class="container">
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
